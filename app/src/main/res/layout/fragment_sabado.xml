                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCCCCC"
                    android:text="11:00 AM" />

                <Button
                    android:id="@+id/btn_12pm_Sabado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
