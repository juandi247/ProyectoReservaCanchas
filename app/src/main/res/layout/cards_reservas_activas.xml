<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAC9C9"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="140dp"
            android:layout_height="41dp"
            android:layout_marginTop="5dp"
            android:text="Juan PÃ©rez"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewFechaHora"
            android:layout_width="258dp"
            android:layout_height="35dp"

            android:layout_marginStart="-1dp"
            android:layout_marginBottom="16dp"
            android:text="Fecha: 2023-01-01, Hora: 12:00 PM"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnFinalizarReserva"
            android:layout_width="108dp"
            android:layout_height="85dp"
            android:layout_marginEnd="1dp"

            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/color_botones_verdoso"
            android:text="Finalizar Reserva"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" /> <!-- Color verde -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>